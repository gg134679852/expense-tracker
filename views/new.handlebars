<div>
  <h1 class="text-center">請輸入您的支出</h1>
</div>
<form action="/expense-tracker" method="POST">
  <div class="container text-center mt-3 w-50 p-3">
      <div class="col">
        <h3>名稱*</h3>
        <input type="text" name="name" required>
      </div>
      <div class="col mt-3">
        <h3>類型*</h3>
        <select name="categoryIcon" required>
          <option value="家居物業=fas fa-home">家居物業</option>
          <option value="交通出行=fas fa-shuttle-van">交通出行</option>
          <option value="休閒娛樂=fas fa-grin-beam">休閒娛樂</option>
          <option value="餐飲食品=fas fa-utensils">餐飲食品</option>
          <option value="其他=fas fa-pen">其他</option>
        </select>
      </div>
      <div class="col mt-3">
        <h3>店家名稱</h3>
        <input type="text" name="shop">
      </div>
      <div class="col mt-3">
        <h3>金額*</h3>
        <input type="number" name="amount" required>
      </div>
      <div class="col mt-3">
        <h3>日期*</h3>
        <input type="date" name="date" required>
      </div>
    <div class="mt-3">
      <button class="btn btn-outline-primary" type="submit">新增</button>
     </div>
  </div>
</form>
